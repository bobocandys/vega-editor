{
  "layers": [{
    "data":{
     "url":"data/us-10m.json",
     "format": {"type": "topojson", "feature": "states"}
    },
    "mark":"path",
    "projection":{
       "type":"albersUsa",
       "scale":1000,
       "translate":[400, 250],
       "center":[0, 0]
    },
    "encoding":{
       "geopath":{
          "field":"geodata",
          "type":"geojson"
       },
       "color": { "value": "#dedede"}
    },
    "config": {
      "mark": {"stroke": "white"}
    }
}, {
    "data": {"url": "data/demo-airports.csv"},
    "mark": "point",
    "projection": {
      "type": "albersUsa",
      "scale": 1000,
      "translate": [400, 250],
      "center": [0, 0]
    },
    "encoding": {
      "x": {"field": "longitude","type": "longitude"},
      "y": {"field": "latitude","type": "latitude"},
      "size": {"field": "total", "type":"quantitative"}
    },
    "config": {
      "mark": {"filled": true}
    }
  }],
  "config": {
    "cell": {"width": 800, "height": 500}
  }
}
